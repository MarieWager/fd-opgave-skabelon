---
import Button from "./Button.astro";
---

<nav>
  <div class="container">
    <a href="/" class="logo">AskExpert</a>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/case">Case Study</a></li>
      <li><a href="/team">Team</a></li>
      <li><a href="/about">About</a></li>
    </ul>
    <button popovertarget="popup">Login</button>
  </div>
</nav>

<div popover="auto" id="popup">
  <div class="modal-content">
    <h2>Dashboard Login</h2>
    <form>
      <label for="email">Email Address</label>
      <input type="email" id="email" name="email" placeholder="Enter Your Email Adress" required />

      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Enter Your Password" required />

      <Button variant="yellow"><a href="">Go to dashboard</a></Button>
    </form>
  </div>
</div>

<style>
  @layer components {
    .container {
      max-width: 1040px;
      margin: 0 auto;
    }

    /* Navigation */
    nav {
      position: static;
      top: 0;
      width: 100%;
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(32px);
      z-index: 1000;
      padding: 20px;
    }

    nav .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav ul {
      display: flex;
      list-style: none;
      gap: 35px;
      padding: 0;
    }

    nav a {
      text-decoration: none;
      color: var(--white);
      font-size: 18px;
      background: none;
      border: none;
      padding: 0;
    }

    nav a:hover {
      color: var(--yellow);
    }

    nav a.logo {
      font-size: 30px;
      line-height: 105%;
    }

    nav button {
      background-color: var(--yellow);
      border: 2px solid var(--yellow);
      color: var(--darkest);
      font-size: 18px;
      line-height: 160%;
      padding: 4px 16px;
      border-radius: 20px;

      &:hover {
        background-color: transparent;
        color: var(--yellow);
      }
    }

    #popup {
      position: fixed;
      top: 85%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: var(--darkest);
      border-radius: 30px;
      padding: 80px 100px;
      z-index: 1000;
      max-width: fit-content;
      animation: slideIn 0.3s ease;
      color: var(--white);

      form {
        display: flex;
        flex-direction: column;

        label {
          font-size: 18px;
          font-weight: 400;
          line-height: 116%;
          margin-bottom: 5px;
        }
        input {
          color: var(--darkest);
          background-color: var(--white);
          height: 60px;
          padding: 20px;
          border-radius: 4px;
          border: 1px solid var(--grey);
          margin-bottom: 30px;
        }
        Button {
          place-self: center;
        }
      }

      h2 {
        font-size: 45px;
        font-weight: 700;
        line-height: 116%;
        margin-bottom: 46px;
      }
    }
    #popup::backdrop {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(5px);
      z-index: 1000;
      transition: all 0.3s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translate(-50%, -60%);
      }

      to {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
    }
  }
</style>
